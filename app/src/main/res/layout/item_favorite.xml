<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="7dp"
    android:layout_margin="5dp"
    android:id="@+id/cardView"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="150dp"
            android:layout_height="195dp"

            android:src="@drawable/itemimage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/itemBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boleyn Kristal"
                android:layout_marginStart="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ay Taşı Kolye - Moon and Shine"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/itemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_quantity"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:text="5 adet stokta"
                android:textColor="@color/quantity"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200,00 $"
                android:textSize="20sp"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/itemAddBasket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEPETE EKLE"
                    android:layout_marginHorizontal="20dp"/>

                <ImageView
                    android:id="@+id/buttonRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_remove"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
